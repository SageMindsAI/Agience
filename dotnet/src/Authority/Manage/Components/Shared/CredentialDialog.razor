@using MudBlazor

<MudDialog>
    <DialogContent>        
        <MudText>@Description</MudText>
        <MudTextField T="string" @bind-Value="ApiKey" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDialog" Color="Color.Primary">Cancel</MudButton>
        <MudButton OnClick="SubmitApiKey" Color="Color.Primary">Confirm</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = null!;    
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Description { get; set; } = string.Empty;
    private string ApiKey { get; set; } = string.Empty;

    private void CloseDialog()
    {
        MudDialog.Cancel();
    }

    private void SubmitApiKey()
    {
        MudDialog.Close(DialogResult.Ok(ApiKey));
    }
}
